{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@core/*": ["src/core/*"],
      "@ui/*": ["src/ui/*"],
      "@tests/*": ["tests/*"]
    },
    "types": ["playwright"]
  },
  "include": ["./**/*.ts"]
}
